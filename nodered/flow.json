  {
    "id": "logic_alert",
    "type": "function",
    "z": "tab_smartwork",
    "name": "Lógica de Alerta",
    "func": "// 1. Captura as 3 variáveis vindas do JSON\nvar t = msg.payload.temp;\nvar d = msg.payload.distancia;\nvar l = msg.payload.luz;\n\n// 2. Lógica de Decisão Unificada\n// Dispara se:\n// - Temperatura for maior que 28\n// - OU Distância for menor que 50 (Perto demais)\n// - OU Luz for menor que 30 (Escuro demais)\nif (t > 28 || d < 50 || l < 30) {\n    msg.payload = \"ALERTA_ON\";\n} else {\n    msg.payload = \"ALERTA_OFF\";\n}\n\n// 3. Passa o comando adiante\nreturn msg;",
    "outputs": 1,
    "timeout": "",
    "noerr": 0,
    "initialize": "",
    "finalize": "",
    "libs": [],
    "x": 630,
    "y": 540,
    "wires": [["mqtt_out_cmd", "status_ui"]]
  },
